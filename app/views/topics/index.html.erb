<style>

  .topic-link {
    text-decoration: none; /* remove underline */
    color: inherit; /* remove blue */
  }
  .topic-link:hover, .topic-link:focus, .topic-link:active {
      color: blue;
 }
</style>

<div class="container">
  <center>
    <%= render(partial: 'demo/buttons') %>

    <div class="card card-body bg-light">
      <%= form_for_filterrific @filterrific do |f| %>
        <div class="row">
          <div class="col-md-4">
            <label class="font-weight-bold form-label">Search</label>
            <%= f.text_field(:search_query, class: 'filterrific-periodically-observed form-control') %>
          </div>
          <div class="col-md-4">
            <label class="font-weight-bold form-label">Tag</label>
            <%= f.select(:with_tag_id, @filterrific.select_options[:with_tag_id], { include_blank: '- Все теги -'}, {class: 'form-control bg-white' } ) %>
          </div>
          <div class="col-md-4">
            <label class="font-weight-bold form-label">Sorted by</label>
            <%= f.select(:sorted_by, @filterrific.select_options[:sorted_by], {}, {class: 'form-control bg-white' }) %>
          </div>
          <%= render_filterrific_spinner %>
        </div>
          <%= link_to('Reset filters', reset_filterrific_url, class: 'm-2 btn btn-primary') %>
      <% end %>
    </div>
    <br>

    <%= render(
      partial: 'topics/list',
      locals: { topics: @topics }
    ) %>
  </center>

</div>
