<style>

  a {
    text-decoration: none; /* remove underline */
    color: inherit; /* remove blue */
  }
  a:hover, a:focus, a:active {
      color: blue;
 }
</style>

<div class="container">
  <center>
    <!-- Demo buttons -->
    <a href="<%= admin_root_path %>" class="btn btn-secondary m-5">Admin</a>

    <%= form_for_filterrific @filterrific do |f| %>
      <div>
        Search
        <%= f.text_field(
          :search_query,
          class: 'filterrific-periodically-observed'
        ) %>
      </div>
      <div>
        Tag
        <%= f.select(
          :with_tag_id,
          @filterrific.select_options[:with_tag_id],
          { include_blank: '- Any -' }
        ) %>
      </div>
      <div>
        Sorted by
        <%= f.select(:sorted_by, @filterrific.select_options[:sorted_by]) %>
      </div>
      <div>
        <%= link_to(
          'Reset filters',
          reset_filterrific_url,
        ) %>
      </div>
      <%= render_filterrific_spinner %>
    <% end %>

    <%= render(
      partial: 'topics/list',
      locals: { topics: @topics }
    ) %>
  </center>
  
</div>
