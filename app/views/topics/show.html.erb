<div class="container">
<center>
  <div class='col-md-6'>
    <%= render(partial: 'demo/buttons') %>

    <br>
    <h1>
      <% if @topic.image.present? %>
        <%= image_tag @topic.image_url %>
      <% end %>
      <p><%= @topic&.title %></p>
    </h1>
    <b><%= @topic&.announce %></b>
    <p><%= @topic&.text %></p>
    <p>Опубликовано: <%= @topic&.published_at %></p>
    <p>
      Тэги:
      <% @tags.each do |tag| %>
        <a href="<%= tag_path(tag) %>"><%= tag.name %></a>;
      <% end %>
    </p>
  </div>
</center>
</div>
